<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Catalog:etc/product_types.xsd">
    <type name="giftcard" label="Gift Card" modelInstance="Magetrend\GiftCard\Model\Product\Type\GiftCard" indexPriority="60" sortOrder="100" isQty="true">
        <priceModel instance="Magetrend\GiftCard\Model\Product\Type\GiftCard\Price" />
        <indexerModel instance="Magetrend\GiftCard\Model\ResourceModel\Product\Indexer\Price\GiftCard" />
        <customAttributes>
            <attribute name="refundable" value="true"/>
            <attribute name="taxable" value="true"/>
        </customAttributes>
    </type>
</config>