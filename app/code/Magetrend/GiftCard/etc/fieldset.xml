<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:DataObject/etc/fieldset.xsd">
    <scope id="global">
        <fieldset id="sales_convert_quote_address">
            <field name="base_shipping_discount_tax_compensation_amnt">
                <aspect name="to_order" />
            </field>
        </fieldset>

        <fieldset id="sales_convert_order">
            <field name="giftcard_amount">
                <aspect name="to_invoice" />
                <aspect name="to_cm" />
            </field>
            <field name="base_giftcard_amount">
                <aspect name="to_invoice" />
                <aspect name="to_cm" />
            </field>

            <field name="giftcard_shipping_amount">
                <aspect name="to_invoice" />
                <aspect name="to_cm" />
            </field>

            <field name="base_giftcard_shipping_amount">
                <aspect name="to_invoice" />
                <aspect name="to_cm" />
            </field>
        </fieldset>

        <fieldset id="sales_convert_order_item">
            <field name="giftcard_amount">
                <aspect name="to_invoice" />
                <aspect name="to_cm" />
            </field>
            <field name="base_giftcard_amount">
                <aspect name="to_invoice" />
                <aspect name="to_cm" />
            </field>
        </fieldset>
    </scope>
</config>
